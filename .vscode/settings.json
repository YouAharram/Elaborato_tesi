{
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-auxdir=build", // tutti i file temporanei
                "-output-directory=PDF", // PDF e tutto il resto
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab"
}